    </TableLayout>

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_table" />

    <Button
        android:id="@+id/btn_decrease"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_req"
        app:layout_constraintEnd_toStartOf="@+id/btn_req"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_req"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="20dp"
        app:cornerRadius="10dp"
        android:text="Request"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/green"
        app:strokeWidth="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_data" />

    <Button
        android:id="@+id/btn_increase"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_req"
        app:layout_constraintStart_toEndOf="@+id/btn_req"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_ci_ver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Versiune XML CI"
        app:layout_constraintTop_toBottomOf="@+id/btn_req"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/btn_decrease_ver"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_create_ci"
        app:layout_constraintEnd_toStartOf="@+id/btn_create_ci"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/btn_create_ci"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Create CI XML"
        app:layout_constraintTop_toBottomOf="@+id/tv_ci_ver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_increase_ver"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_create_ci"
        app:layout_constraintStart_toEndOf="@+id/btn_create_ci"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btn_send_ci"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Send CI to ETP"
        app:cornerRadius="10dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/green"
        app:strokeWidth="3dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_ci"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Switch
        android:id="@+id/sw_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="TEST Serv."
        app:layout_constraintEnd_toStartOf="@+id/sw_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_send_ci" />

    <Switch
        android:id="@+id/sw_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="Locked SEND"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sw_host"
        app:layout_constraintTop_toBottomOf="@+id/btn_send_ci" />

</androidx.constraintlayout.widget.ConstraintLayout>