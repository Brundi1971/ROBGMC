                android:layout_weight="20"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="BG>>RO (+)"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/id_tv22"
